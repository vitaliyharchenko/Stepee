block navbar
  nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar")
          span.sr-only Toogle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/")
          //img(src="http://dummyimage.com/150x15" alt="Stepee logo")
          | Stepee
      #navbar.navbar-collapse.collapse
        ul.nav.navbar-nav
          li
            a(href="#") Как это работает?
          li.dropdown
            a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-expanded="false")
              |Предметы
              span.caret
            ul.dropdown-menu(role="menu")
              |{% for subject in subjects_all %}
              li
                a(href="{% url 'subject' subject.id %}") {{ subject.title }}
              |{% endfor %}
          li
            a(href="#") Ученики
          li
            a(href="{% url 'exercise' 2 %}") Задание
        |{% if user.is_anonymous %}
        ul.nav.navbar-nav.navbar-right
          li
            a(href="#" data-toggle="modal" data-target="#loginModal") Вход
            //a(href="{% url 'login' %}") Вход
          li
            a(href="#" data-toggle="modal" data-target="#regModal") Зарегистрироваться
        |{% else %}
        ul.nav.navbar-nav.navbar-right
          li
            a(href="#")
              img(src="http://dummyimage.com/20x15" alt="User Avatar")
              | &nbsp;
              |{{ user }}
          li
            a(href="{% url 'logout' %}") Выйти
        |{% endif %}